{
  "manifest_version": 3,
  "name": "Green Helper",
  "description": "Automation tool for common gardening tasks",
  "version": "0.0.0",
  "content_scripts": [
    {
      "js": ["src/main.js"],
      "matches": [
        "https://www.zieloneimperium.pl/*",
        "https://s1.zieloneimperium.pl/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/index.html", "src/index.css", "src/handlers/*"],
      "matches": [
        "https://www.zieloneimperium.pl/*",
        "https://s1.zieloneimperium.pl/*"
      ]
    }
  ]
}
