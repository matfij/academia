<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="MauiCanvasCore.MainPage"
             BackgroundColor="BurlyWood">

    <VerticalStackLayout>

        <skia:SKCanvasView x:Name="CanvasView" 
            PaintSurface="OnPaintSurface"
            HeightRequest="600"
            WidthRequest="1200"
            Margin="20"/>

        <FlexLayout WidthRequest="1200" JustifyContent="SpaceBetween">

            <Button Text="Start" Clicked="StartSimulation" FlexLayout.Basis="50%" Margin="0 5 0 0" />

            <Button Text="Stop" Clicked="StopSimulation" FlexLayout.Basis="50%" Margin="0 0 0 5" />

        </FlexLayout>
    </VerticalStackLayout>

</ContentPage>
